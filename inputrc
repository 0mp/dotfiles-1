# vi mode settings
set show-mode-in-prompt on
# TODO work out why the \1 and \2 are necessary, and why wrapping escape sequences in \[...\] cause brackets
# to appear in the output
set vi-ins-mode-string "\1\e[1;32mI\e[0m\2 "
set vi-cmd-mode-string "\1\e[1;31mN\e[0m\2 "
set editing-mode vi
set keyseq-timeout 50

# more ergonomic tab completion
set keymap vi-insert
Tab: menu-complete
set show-all-if-ambiguous on
set show-all-if-unmodified on
set completion-ignore-case on
set menu-complete-display-prefix on

# dvorak navigation
set keymap vi-command
"\e[A": history-search-backward
"\e[B": history-search-forward
"\e[C": forward-char
"\e[D": backward-char
"n": history-search-backward
"t": history-search-forward
"h": backward-char
"s": forward-char
"H": backward-word
"S": forward-word

# restore some emacs shortcuts
set keymap vi-insert
Control-a: beginning-of-line
Control-e: end-of-line
Control-k: kill-line

# restore some emacs shortcuts
set keymap vi-command
Control-a: beginning-of-line
Control-e: end-of-line
Control-k: kill-line
